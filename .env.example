# Trading Mode (TEST/PAPER/LIVE)
MODE=TEST

# Server Configuration
HOST=127.0.0.1
PORT=8080
HTTPS=False
POSTBACK_HOST=sensexbot.ddns.net
POSTBACK_PORT=443

# Zerodha API Credentials
ZAPI_KEY=your_api_key_here
ZAPI_SECRET=your_api_secret_here
ACCESS_TOKEN=  # Updated daily via auth flow

# Trading Parameters
MAX_TRADES_PER_DAY=3
MAX_SL_HITS=2
DAILY_LOSS_CAP=25000
RISK_PER_TRADE=0.01
MIN_BALANCE=50000
EMA_FAST=10
EMA_SLOW=20
VOLATILITY_THRESHOLD=0.02
SL_PERCENT=0.03
TP_PERCENT=0.06

# Telegram Notifications
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
ENABLE_NOTIFICATIONS=True

# Data Management
DATA_RETENTION_HOT=90
DATA_RETENTION_WARM=730
AUTH_TIMEOUT=1800

# Logging
LOG_LEVEL=INFO

# SSL (for LIVE mode)
SSL_CERT_PATH=/etc/letsencrypt/live/sensexbot.ddns.net/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/sensexbot.ddns.net/privkey.pem
